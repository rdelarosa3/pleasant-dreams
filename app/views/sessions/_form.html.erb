<style type="text/css">
  .card, .card a, .card p{
    background: url('<%= asset_url "broken_noise.png"%>');
    color:white;
  }

</style>

<div class="container mt-100 mb-4">
  <br>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="card col-md-6 shadow" id="sign-card">
      <h2 class="text-center mt-4">Sign in</h2> 
      <%= simple_form_for :session, url: session_path, defaults: {required:false} do |f| %>
        <%= f.input :email, placeholder: 'user@domain.com' %>              
        <%= f.input :password %>
        <%= f.button :submit, class:"btn btn-danger btn-block" %>
      <% end %>
      <br>
      <% if Clearance.configuration.allow_sign_up? %>
        <p class="hint-text text-center small text "></p>
      <% end %>
      <p class="hint-text text-center small text "><%= link_to 'Reset password', new_password_path %></p>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>