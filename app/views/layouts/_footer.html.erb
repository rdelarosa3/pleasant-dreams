<% unless controller_name == 'requests' %>
<% if controller_name == 'passwords' %>
<style>
  footer {
    position:fixed!important;
    bottom:0;
  }
</style>
<% end %>
<!-- Footer -->
<% @business = business_info%>
<footer class="page-footer font-small blue-grey lighten-5">
  <!-- Footer Links -->
  <div class="container text-center text-md-left mt-5">
    <!-- Grid row -->
    <div class="row mt-3 mb-3 dark-grey-text">
      <!-- Grid column -->
      <div class="col-md-3 col-lg-4 col-xl-3 mb-4">
        <!-- Content -->
        <h6 class="text-uppercase font-weight-bold"><%= @business.name %></h6>
        <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
        <p>
          <% if @business.bio.present? %>
          <%= @business.bio %>
          <% end %>
        </p>

      </div>
      <!-- Grid column -->
      <div class="col-md-5 col-lg-5 col-xl-5 mx-auto mb-4">
        <!-- Links -->
        <center>
        <h6 class="text-uppercase font-weight-bold">Business Hours</h6>
        <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">

        <p>
        <% @business.business_hours.each do |hours| %>
        <%= hours.day %> -  <%= hours.open_time.strftime("%H:%M") %> - <%= hours.close_time.strftime("%H:%M") %><br>
        <% end %> </p>

      </div>
      <!-- Grid column -->

      <!-- Grid column -->
      <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
        <!-- Links -->
        <h6 class="text-uppercase font-weight-bold"">contact</h6>
        <hr class="teal accent-3 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
        <p><i class="fas fa-home mr-3"></i><%= @business.street %></p>
        <p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= @business.city %>, <%= @business.state %> <%= @business.zipcode %></p>
        <p><i class="fas fa-envelope mr-3"></i><a href="mailto:<%= business_info.email %>"> <%= @business.email %></a></p>
        <p><i class="fas fa-phone mr-3"></i> <%= @business.phone %></p>
      </div>
      <!-- Grid column -->
    </div>
    <!-- Grid row -->
  </div>
  <% end %>
  <!------------ Social buttons ------------>
  <div id="social" style="background-color: #2a2d31;">
    <div class="container">
      <!-- Grid row-->
      <div class="py-4">
        
        <ul class="list-unstyled list-inline text-center">
          <% if @business.facebook.present? %>
          <li class="list-inline-item">
            <a href="<%= @business.facebook %>" class="btn-floating btn-fb mx-1" target="_blank">
              <i class="fab fa-facebook fa-3x"> </i>
            </a>
          </li>
          <% end %>
          <% if @business.instagram.present? %>
          <li class="list-inline-item">
            <a href="<%= @business.instagram %>" class="btn-floating btn-tw mx-1" target="_blank">
              <i class="fab fa-instagram fa-3x"> </i>
            </a>
          </li>
          <% end %>
          <% if @business.youtube.present? %>
          <li class="list-inline-item">
            <a href="<%= @business.youtube %>" class="btn-floating btn-li mx-1">
              <i class="fab fa-youtube fa-3x"> </i>
            </a>
          </li>
          <% end %>
        </ul>
      </div>  
    </div>
    <!-- Copyright -->
    <div class="footer-copyright text-center"><small>Â© 2019 Copyright:
      <a href="#"> <%= @business.email if @business.email.present? %></a></small>
    </div>
  </div>
</footer>
<!-- Footer -->
