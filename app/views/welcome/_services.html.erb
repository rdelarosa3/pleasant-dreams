<div class="container py-5">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="section-heading text-uppercase">Services</h2>
      <h3 class="section-subheading ">Services are not limited please inquire.</h3>
      <br>
    </div>
  </div>

  <!-- services image logos -->
  <div class="row text-center">
    <div class="col-md-4">    
      <span class="fa-stack fa-4x">
        <i class="fas fa-circle fa-stack-2x text-dark"></i> 
        <i class="fa-stack-1x fa-inverse"><%= image_tag("gun.png") %></i>
      </span> 
      <h4 class="service-heading">Tattoos</h4>
      <p class=""><%= @business.tattoo %> </p>
    </div>

    <div class="col-md-4">
      <span class="fa-stack fa-4x">
        <i class="fas fa-circle fa-stack-2x text-dark"></i>
        <i class="fa-stack-1x fa-inverse"><%= image_tag("anchor.png") %></i>
      </span>
      <h4 class="service-heading">Piercing</h4>
      <p class=""><%= @business.piercing %></p>
    </div>

    <div class="col-md-4">
      <span class="fa-stack fa-4x">
        <i class="fas fa-circle fa-stack-2x text-dark"></i>
        <i class="fa-stack-1x fa-inverse"><%= image_tag("rose.png") %></i>
      </span> 
      <h4 class="service-heading">Supplies</h4>
      <p class=""><%= @business.product %></p>
    </div>
  </div>
  <!-- !services image logos -->

  <div class="row">
    <div class="col-lg-12 text-center section-footer">
      <h3>
        <a href="#" data-target="#serviceTypes" data-toggle="modal" class="text-muted">Click here for Service Prices</a>
      </h3>
    </div>
  </div>
</div>

<!---------------- Services Modal ---------------------->

<div class="modal fade" id="serviceTypes" tabindex="0">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div>
        <button class="close mr-auto pt-1 pr-4"  data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <%= render :partial => "services/services" %>
      </div>
    </div>
  </div>
</div>
    
<!---------------- !Services Modal ---------------------->  