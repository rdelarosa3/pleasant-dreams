<style>
  @media (min-width: 500px){
    #memberRow{
    flex-wrap: unset!important;
    overflow-x: auto;
  }
  <% if @staff.count > 3 %>
  #afterClick::before {
    margin-top: 150px;
    content: '';
    display: inline-block;
    width: 30px;
    height: 50px;
    position: absolute;
    z-index: 1;
    background: url('<%= asset_url "next.png"%>');
    background-position: center center;
}
<% end %>
/*    .scrolling-wrapper {
      overflow-x: scroll;
      overflow-y: hidden;
      white-space: nowrap;
      -webkit-animation: move 600s linear infinite;
      animation: move 600s linear infinite;
    }*/
  }


</style>

<div class="row">
<div class="col-2" >
</div>
<div class="col-8" >
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="font-weight-bold text-center text-uppercase mt-3 mb-5">The artist</h2>
    </div>
  </div>

  <!-- list each member that is artist from database -->
  <div class="row scrolling-wrapper tab" id="memberRow">
    <% @staff.each do |artist|%>
      <div class="col-sm-4">
        <div class="team-member">
          <% if  artist.avatar? %>
            <%= link_to image_tag(artist.avatar_url, class: ' mx-auto rounded-circle',width: '255', height: '255', alt: ""), artist %>
          <% else %>
            <%= link_to image_tag( "default_avatar.jpg", class: 'mx-auto rounded-circle',width: '255', height: '255', alt: "",style: "filter: invert(100%);"), artist %>
          <% end %>
          <h4><%= artist.first_name %></h4>
          <p class="text-muted"><%= artist.title.name if !artist.title.nil? %></p>

          <ul class="list-inline social-buttons">
            <li class="list-inline-item insta">
              <% if artist.instagram.present? %>
                <a href="<%=artist.instagram%>"target="_blank">
                  <% else %>
                <a href="">  
              <% end %>    
              <i class="fab fa-instagram"></i>
              </a>
            </li>
            
            <li class="list-inline-item fb">
              <% if artist.facebook.present? %>
                <a href="<%=artist.facebook %>" target="_blank">
                  <% else %>
               <a href="" >   
              <% end %>    
              <i class="fab fa-facebook-f"></i>
              </a>
            </li>
            
            <li class="list-inline-item linked">
              <% if artist.linkedin.present? %>
                <a href="<%= artist.linkedin %>"target="_blank">
                  <% else %>
              <a href="">    
              <% end %>
              <i class="fab fa-linkedin-in"></i>
              </a>
            </li> 
          </ul>
        </div>
      </div>
    <% end %>
  </div>
  <!-- !list each member that is artist from database -->
  
  <div class="row">
    <div class="col-lg-8 mx-auto text-center">
      <p class="large">Make your appointment with one of our highly skilled team members today.</p>
    </div>
  </div>
</div>
<div class="col-2" id="afterClick" >
</div>
</div>
<script>

$('div#afterClick').click(function() {
    var far = $( 'div#memberRow' ).width();
    var pos = $('div#memberRow').scrollLeft() + far;
    $('div#memberRow').animate( { scrollLeft: pos }, 1000, 'easeOutQuad' );
});
</script>