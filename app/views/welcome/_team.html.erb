<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h2 class="font-weight-bold text-center text-uppercase mt-3 mb-5">The artist</h2>
    </div>
  </div>

  <!-- list each member that is artist from database -->
  <div class="row scrolling-wrapper tab" id="memberRow">
    <% @staff.each do |artist|%>

      <% if @staff.count > 1 %>
        <div class="col-md-4">
      <% else %>
        <div class="col-md-12">
      <% end %>

        <div class="team-member">
          <!-- avatar picture -->
          <% if  artist.avatar? %>
            <%= link_to image_tag(artist.avatar_url, class: ' mx-auto rounded-circle',width: '255', height: '255', alt: ""), artista_path(artist.id) %>
          <% else %>
            <%= link_to image_tag( "default_avatar.jpg", class: 'mx-auto rounded-circle',width: '255', height: '255', alt: "",style: "filter: invert(100%);"), artista_path(artist.id) %>
          <% end %>
          <h4><%= artist.first_name %></h4>
          <p class="text-muted"><%= artist.title.name if !artist.title.nil? %></p>

          <!-- ***team member social buttons***  -->

          <!-- instagram section -->
          <ul class="list-inline social-buttons">
            <li class="list-inline-item insta">
              <% if artist.instagram.present? %>
                <a href="<%=artist.instagram%>"target="_blank">
                  <% else %>
                <a href="">  
              <% end %>    
              <i class="fab fa-instagram"></i>
              </a>
            </li>
            <!-- facebook section -->
            <li class="list-inline-item fb">
              <% if artist.facebook.present? %>
                <a href="<%=artist.facebook %>" target="_blank">
                  <% else %>
               <a href="" >   
              <% end %>    
              <i class="fab fa-facebook-f"></i>
              </a>
            </li>
            <!-- linkedin section -->
            <li class="list-inline-item linked">
              <% if artist.linkedin.present? %>
                <a href="<%= artist.linkedin %>"target="_blank">
                  <% else %>
              <a href="">    
              <% end %>
              <i class="fab fa-linkedin-in"></i>
              </a>
            </li> 
          </ul><!-- team member social buttons  -->

        </div>
      </div>
    <% end %>
  </div><!-- !list each member that is artist from database -->

  
  <!-- team member scroll button section -->
  <div class="row">
    <div class="mx-auto text-center">
     
      <div class="memberNav">
      <% if @staff.count > 3 %>  
        <%= image_tag("prev.png",class: 'float-left mr-4', id: "memberLeft") %>
        <%= image_tag("next.png",class: 'float-right ml-4', id: "memberRight") %>
      <% end %>
      </div>
        <p class="large">Make your appointment with one of our highly skilled team members today.</p>
    </div>
  </div>

</div>

<script>

// team member scroll button click function
$(document).ready(function(){
    $("#memberRight").click(function(){
      console.log("pressed");
          $('#memberRow').animate({scrollLeft:'500%'}, 'slow');
    });

    $("#memberLeft").click(function(){
      console.log("pressed");
          $('#memberRow').animate({scrollLeft:'-500%'}, 'slow');
    });
});

// hide buttons on mobile device
$(document).ready( function() {
    if (screen.width <= 480) {
        $('.memberNav').hide();
    }
});

</script>