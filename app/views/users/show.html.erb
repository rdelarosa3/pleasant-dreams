<!-- css in page to change only elements in this view -->
<style>
  .about-artist{
    color:white!important;
  }
  .btn-edit {
      color: #fff;
      background-color: #07b8da;
      border-color: #06a9c7d6;
  }

  .mt-100 {
    margin-top: 100px;
  }

  h2 {
    text-shadow: 4px 4px 0px rgba(0,0,0,0.1);
    line-height: 1.2;
    font-size: 40px;
    font-weight: 700;
    font-family: Montserrat,-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif,'Apple Color Emoji','Segoe UI Emoji','Segoe UI Symbol','Noto Color Emoji';
  }

  h4 {
    text-shadow: 4px 4px 0px rgba(0,0,0,0.1);
    font-size: 1.5rem;
    font-weight: 700;
    font-family: Montserrat,-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif,'Apple Color Emoji','Segoe UI Emoji','Segoe UI Symbol','Noto Color Emoji';
  }

  .appointment-card{
    margin-top: 2.5rem;
  }
  .mt-65{
    margin-top:65px;
    max-width: 100%;
  }


  /*gallery*/
 .gallery-block.compact-gallery{
  padding-bottom: 60px;
  padding-top: 60px;
}

.gallery-block.compact-gallery .heading{
    margin-bottom: 50px;
    text-align: center;
}

.gallery-block.compact-gallery .item .image{
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  transition: 0.4s;
  -webkit-filter: grayscale(90%); /* Safari 6.0 - 9.0 */
  filter: grayscale(100%);
  border-radius: 50px 15px;
}

.gallery-block.compact-gallery .item{
  margin-bottom: 20px;
}



  .gallery-block.compact-gallery .zoom-on-hover:hover .image{
    transform: scale(1.08);
    box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.15) !important;
    -webkit-filter: grayscale(0%); /* Safari 6.0 - 9.0 */
    filter: grayscale(0%);
  }

  @media (min-width: 768px){
    .col-md-2 {
      -webkit-box-flex: 0!important;
      -ms-flex: 0 0 50%!important;
      flex: 0 0 50%!important;
      max-width: 50%!important;
      position: relative!important;
      width: 100%!important;
      min-height: 1px!important;
      padding-right: 15px!important;
      padding-left: 15px!important;
    }
  @media (min-width: 992px){
    .col-lg-2 {
        flex: 0 0 25%!important;
        max-width: 25%!important;
        position: relative!important;
        width: 100%!important;
        min-height: 1px!important;
        padding-right: 15px!important;
        padding-left: 15px!important;
    }
  }

  @media only (max-width: 480px) {
  .gallery-block.compact-gallery .item {
      /*pointer-events: none;*/
    }
  }
   

</style>
<div class="container about-artist mt-65 pb-4" style="background: url('<%= asset_url "broken_noise.png"%>');">
  <div class='row'>
    <div class="col-md-6" style="padding: 3em;">
      <div class=" h-100 text-center align-items-center">
        <h2 class="text-uppercase">About <%= @user.first_name %></h2><br>
        <h5 class="align-items-center"><em><%= @user.bio %></em></h5>
      </div>
    </div>      
    <div class="col-md-6">
    <%= render partial: '/users/avatar' %>
    </div>
  </div>
</div>

<!-- user gallery section -->
<section class="gallery-block compact-gallery">
    <div class="container">
        <div class="heading">
            <h2 class="m-5 text-center text-uppercase"><%= @user.first_name %> Inks</h2>
        </div>
        <div class="instagram_feed instagram-feed"></div>
    </div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>




<script>
   $(document).ready(function(){
       $.instagramFeed({
      'username': 'cambodia', // or tagging
      'container': ".instagram-feed",
      'callback': null,
      'styling': false,
      'display_gallery': true,
      'items': 36,
      'items_per_row': 10,
      'margin': 0
    });
   });     
</script>

<script>
 baguetteBox.run('.compact-gallery', {
     animation: 'slideIn',
 });
</script>






