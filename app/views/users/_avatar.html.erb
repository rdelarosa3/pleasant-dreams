<center>
  <% if @user.avatar? %>
      <%= image_tag(@user.avatar_url, class: 'rounded-circle mt-4 shadow-sm',width: '200', height: '200') %>
      <br><br>

  <% else %>
      <%= image_tag( "default_avatar.jpg", class: 'rounded-circle mt-4',width: '200', height: '200',style: "filter: invert(100%);") %>
     <br>
     <br>
  <% end %>
          <p class=""><%= @user.title.name if !@user.title.nil? %></p>

          <ul class="list-inline social-buttons">
            <li class="list-inline-item insta">
              <% if @user.instagram.present? %>
                <a href="<%=@user.instagram%>"target="_blank">
                  <% else %>
                <a href="">  
              <% end %>    
              <i class="fab fa-instagram"></i>
              </a>
            </li>
            
            <li class="list-inline-item fb">
              <% if @user.facebook.present? %>
                <a href="<%=@user.facebook %>" target="_blank">
                  <% else %>
               <a href="" >   
              <% end %>    
              <i class="fab fa-facebook-f"></i>
              </a>
            </li>
            
            <li class="list-inline-item linked">
              <% if @user.linkedin.present? %>
                <a href="<%= @user.linkedin %>"target="_blank">
                  <% else %>
              <a href="">    
              <% end %>
              <i class="fab fa-linkedin-in"></i>
              </a>
            </li> 
          </ul>
  <% if current_user == @user %>
    <%= link_to 'Edit Profile', edit_user_path(@user),class: "btn btn-edit btn-sm mt-3" %>
  <% end %> 
  
  
</center>