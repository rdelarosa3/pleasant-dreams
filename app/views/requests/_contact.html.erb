<div class="card h-100 shadow">
  <div class="card-body">
    <h2 class="text-center stylish-color-dark font-weight-bold text-uppercase">Contact Us</h2> 
    <p class="text-center">Walk-in's are welcome but due to high volume of custumers appointment is preferred. </p>
  
    <div class="row">
      <div class="col-md-6 mt-4">
        <h4>ADDRESS</h4>
        <p><%= link_to "(Google Map)", new_request_path(anchor: "googleMap")%></p><br>
        <h6><%= @business.name %></h6>
        <h6><%= @business.street %>, <%= @business.city %></h6>
        <h6><%= @business.state %> <%= @business.zipcode %>, <%= @business.country %></h6>
        <br><br>
        <h4>PHONE NUMBER</h4><br>
        <h6>Phone: <%= @business.phone %></h6>
        <br><br>
        <h4>EMAIL ADDRESS</h4><br>
        <span><a href="mailto:<%= @business.email %>"><h6><%= @business.email %></h6></a></span>
      </div>
      <div class="col-md-6 mt-4">
        <h4 class="">Business Hours</h4>
        <hr>
        <table class="table-responsive table-striped mt-3 table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Hours</th>        
            </tr>
          </thead>
          <tbody>
            <% @business.business_hours.each do |hours| %>
              <tr>
                <td><%= hours.day %></td>
                <td><%= hours.open_time.strftime("%H:%M") %> - <%= hours.close_time.strftime("%H:%M") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="days-open">
          <p class="text-center"><small>**Closed Sundays**</small></p>
           <!-- notifies user if business is currently open -->
          <p class="text-success text-center"><% if open_now? %> 
          <%= image_tag("open.png",  style: "height: 70px;width: 70px; filter: invert(100%);") %></p>
          <% else %>
          <%= image_tag("close.png", style: "height: 70px;width: 70px; filter: invert(100%);") %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="container">
        <div class="py-4">
          <ul class="list-unstyled list-inline text-center">
            <% if @business.facebook.present? %>
            <li class="list-inline-item">
              <a href="<%= @business.facebook %>" class="btn-floating btn-fb mx-1" target="_blank">
                <i class="fab fa-facebook fa-3x"> </i>
              </a>
            </li>
            <% end %>
            <% if @business.instagram.present? %>
            <li class="list-inline-item">
              <a href="<%= @business.instagram %>" class="btn-floating btn-tw mx-1" target="_blank">
                <i class="fab fa-instagram fa-3x"> </i>
              </a>
            </li>
            <% end %>
            <% if @business.youtube.present? %>
            <li class="list-inline-item">
              <a href="<%= @business.youtube %>" class="btn-floating btn-li mx-1">
                <i class="fab fa-youtube fa-3x"> </i>
              </a>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div> 